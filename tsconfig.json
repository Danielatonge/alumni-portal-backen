{
    // https://www.typescriptlang.org/tsconfig#compilerOptions
    "compilerOptions": {
        "esModuleInterop": true,
        "lib": ["es2020"],
        "module": "es2022",
        "preserveConstEnums": true,
        "moduleResolution": "Node",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "strict": true,
        "sourceMap": true,
        "target": "es2022",
        "types": ["node"],
        "outDir": "dist",
        "baseUrl": ".",
        "paths": {
            "~/*": ["src/*"]
        }
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules"]
}
